<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <% unless current_user.friend?(@user) || current_user == @user %>
    <%= button_to 'Invite to friendship', "#{invite_to_friendship_path}", method: :post %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
